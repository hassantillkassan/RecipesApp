<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/half_space_8"
    android:layout_marginBottom="@dimen/default_space_16"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/half_space_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            tools:src="@drawable/burger" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/CategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/half_space_8"
            android:layout_marginTop="@dimen/half_space_8"
            tools:text="Бургеры" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/CategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/half_space_8"
            android:layout_marginVertical="@dimen/half_space_8"
            tools:text="Рецепты всех\nпопулярных видов\nбургеров" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
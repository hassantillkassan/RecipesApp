<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/half_space_8</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ShapeDrawable" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_rounded_corner</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:padding">@dimen/padding_title_text</item>
    </style>

    <style name="CategoryTitle" parent="StyleTitle14">
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="CategoryDescription" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/descriptionTextColor</item>
    </style>
    
    <style name="StyleTitle20" parent="ShapeDrawable">
        <item name="android:textColor">@color/recipeCardSubtitle</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="RecipeDescription" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/descriptionTextColor</item>
    </style>

    <style name="EmptyFavoritesText" parent="RecipeDescription">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="RoundedRecyclerView">
        <item name="android:background">@drawable/bg_rounded_corner_white</item>
        <item name="android:layout_marginHorizontal">@dimen/default_space_16</item>
        <item name="android:layout_marginTop">@dimen/default_space_16</item>
    </style>

    <style name="PortionQuantity">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/portionQuantityTextColor</item>
    </style>
    
    <style name="styleSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
    </style>

</resources>
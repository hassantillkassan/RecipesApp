<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/margin_standard_half</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ShapeDrawable" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_rounded_corner</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:padding">@dimen/padding_title_text</item>
    </style>

    <style name="CategoryTitle" parent="StyleTitle14">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CategoryDescription" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/descriptionTextColor</item>
    </style>

</resources>